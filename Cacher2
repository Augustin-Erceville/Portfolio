  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Bootstrap theme toggle</title>
  <!-- Bootstrap 5.3 (use the 5.3.x series) -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Tes styles personnalis√©s (si besoin) */
    :root {
      --brand-accent: #0d6efd;
    }
    [data-bs-theme="dark"] {
      /* si tu veux surcharger sp√©cifiquement certains √©l√©ments */
      --bs-body-bg: #0b0f14;
      --bs-body-color: #e9ecef;
    }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg bg-body-tertiary px-3">
    <a class="navbar-brand" href="#">Mon site</a>
    <div class="ms-auto">
      <button id="themeToggle" class="btn btn-outline-secondary" aria-pressed="false" title="Basculer th√®me">üåô / ‚òÄÔ∏è</button>
    </div>
  </nav>

  <main class="container py-5">
    <h1>Bootstrap + data-bs-theme</h1>
    <p class="text-muted">Clique sur le bouton pour basculer le th√®me. La pr√©f√©rence est sauvegard√©e.</p>

    <div class="card p-3 mt-3">
      <p>Carte exemple</p>
      <button class="btn btn-primary">Bouton Bootstrap</button>
    </div>
  </main>

  <script>
    // Lire la pr√©f√©rence stock√©e ou le mode OS
    const saved = localStorage.getItem('theme'); // 'light' or 'dark'
    const el = document.documentElement;

    if (saved) {
      el.setAttribute('data-bs-theme', saved);
    } else {
      // fallback: d√©tecter pr√©f√©rence syst√®me
      const prefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
      el.setAttribute('data-bs-theme', prefersDark ? 'dark' : 'light');
    }

    // Bouton toggle
    document.getElementById('themeToggle').addEventListener('click', () => {
      const current = el.getAttribute('data-bs-theme') === 'dark' ? 'dark' : 'light';
      const next = current === 'dark' ? 'light' : 'dark';
      el.setAttribute('data-bs-theme', next);
      localStorage.setItem('theme', next);
    });
  </script>
</body>
